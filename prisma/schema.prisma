generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  Id           String    @id @default(uuid())
  FirstName    String
  LastName     String
  Email        String    @unique
  Password     String
  PhoneNumber  String
  Role         String
  Image        Bytes?
  CreatedAt    DateTime  @default(now())
  LastLoginAt  DateTime?
  SessionToken String?
  IsActive     Boolean   @default(true)
}

